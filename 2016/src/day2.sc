val passcode = "\\\\"

val buttonGrid = List(
  List(1, 2, 3),
  List(4, 5, 6),
  List(7, 8, 9)
)

case class Location(var x: Integer, var y: Integer)

var code = ""
var currentPosition = Location(1, 1)
passcode.split('\n').foreach((line) => {
  line.foreach((letter) => {
    val positionAttempt = currentPosition.copy()
    try {
      letter match {
        case 'L' => positionAttempt.x -= 1
        case 'R' => positionAttempt.x += 1
        case 'U' => positionAttempt.y -= 1
        case 'D' => positionAttempt.y += 1
      }
      buttonGrid(positionAttempt.y)(positionAttempt.x)
      currentPosition = positionAttempt.copy()
    } catch {
      case i: IndexOutOfBoundsException =>
    }
  })
  code += buttonGrid(currentPosition.y)(currentPosition.x).toString
})

code
